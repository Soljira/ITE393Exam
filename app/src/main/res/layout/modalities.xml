<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_bg"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:ignore="ExtraText">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp">


            <!-- Title Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="LEARNING MODALITIES"
                android:textColor="#2E4D1E"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Flex 2-4 Banner -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/flex"
                android:background="@color/phinmaGreen"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <!-- Student Image -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/students99"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <!-- Description Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="• A combination of studying in school and studying at home.\n\n• 2 days face-to-face and 4 days remote learning.\n\n• Teacher support will be via text, call, and social media during the remote coaching."
                android:textColor="#000000"
                android:textSize="14sp" />

            <!-- Flex 2-4 Banner -->
            <ImageView
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/flexremote"
                android:background="@color/phinmaGreen"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <!-- Student Image -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/student100"
                tools:ignore="ContentDescription,ImageContrastCheck" />

            <!-- Description Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="• Largely home-based learning; \n\n• Suited for regular students who live far away and have difficulties traveling to come to school.\n\n• Learn online together with your classmates. \n\n• Teacher support will be via text, call and social media during the remote coaching."
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_urdanetacampus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD000"
                android:contentDescription="@string/sch_nextPage"
                android:src="@drawable/sch_ic_downward"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
