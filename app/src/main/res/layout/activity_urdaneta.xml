<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/campus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Urdaneta Campus"
            android:textColor="#2E4D1E"
            android:textSize="18sp"
            android:textStyle="bold" />

        
        <LinearLayout
            android:id="@+id/dropdown_allied_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/header_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow"
                android:drawablePadding="8dp"
                android:text="College of Allied Health Sciences"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/content_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Courses offered: Nursing, Medical Technology, Physical Therapy"
                android:visibility="gone"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/dropdown_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/header_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow"
                android:drawablePadding="8dp"
                android:text="College of Management and Accountancy"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="8dp" />


            <TextView
                android:id="@+id/content_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Courses offered: Accountancy, Business Administration"
                android:visibility="gone"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dropdown_allied_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/header_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow"
                android:drawablePadding="8dp"
                android:text="College of Criminal Justice Education"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/content_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Courses offered: Nursing, Medical Technology, Physical Therapy"
                android:visibility="gone"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dropdown_allied_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/header_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/arrow"
                android:drawablePadding="8dp"
                android:text="College of Engineering and Architecture"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="8dp" />

            <TextView
                android:id="@+id/content_allied_health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Courses offered: Nursing, Medical Technology, Physical Therapy"
                android:visibility="gone"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>
